<body>
    <% if(!userLogged){ %>
        <%- include('./partials/header') %>
      <% } else { %>
        <%- include('./partials/headerLogged') %>
        
      <% } %>
    <div class="container">
<div class="coluna-lateral">

<div class="contatos-msg">
    <span></span>
<div class="imagem-ctt">
    <img width="50px" height="50px" src="/images/profiles/<%= users.foto %>" alt="User-Image">
</div>
<p><%= users.nome + ' ' + users.sobrenome %> </p>
</div>

</div>
<form id="chat">
<div class="container-central">
  
    <div class="campo-de-mensagens">
        <div class="messages">

      </div>

    </div>
    <div class="form-message">
<input type="text" class="input-text-chat" name="message" placeholder="Digite sua mensagem">
<button type="submit" class="button-send-message">
    <span class="material-symbols-outlined sendMessage">
    send
    </span></button>
</div>

</form>


</div>
</div>
<br>
<%- include('./partials/footer') %>



<script type="text/javascript">
    var socket = io('http://localhost:3030');
    function renderMessage(message) {
        $('.messages').append('<div class="message">' + message.message + '</div>')
    }

    socket.on('previousMesssages', function(messages){
        for(message of messages){
            renderMessage(message)
        }
    })

      socket.on('receivedMessage', function(message){
        renderMessage(message);
      })


    $('#chat').submit(function(event){
        event.preventDefault();
        
    
        var message = $('input[name=message]').val();
        
        if(message.length){
            var messageObject ={
                
               
                message: message
            };

            renderMessage(messageObject);

            socket.emit('sendMessage', messageObject);
        }
    });
</script>
</body>
