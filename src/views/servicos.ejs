<div class="title-anuncios">
<h3>Conheça os profissionais disponíveis:  </h3>

</div>

<% services.forEach(function(service){ %>

<div class="workers-card">
    <p class="profissao"> <%= service.nome %> </p>
  <div class="work-image-box">
<img src="/images/servicesImg/<%= service.imagem + '.jpg' %>" alt="WorkImage">
  </div>
    <div class="description-worker">
    <p> <%= service.descricao %></p>
    </div>
